#include<iostream>
using namespace std;
class node{
    public:
    int data;
    node* next;
};
class SLL{
    public:
    node* head=NULL;
    node* tail=NULL;
    void addhead(){
        int t;
        cout<<"enter data u want to add in head";
        cin>>t;
        node* temp=new node;
        temp->data=t;
        temp->next=NULL;
        if(head==NULL){
            head=tail=temp;
        }
        else{
            temp->next=head;
            head=temp;
        }
    }
    void deletehead(){
        node* temp=head;
             temp=temp->next;
             delete head;
             head=temp;
    }
    
    void addtail(){
        int t;
        cout<<"enter data u want to add in tail";
        cin>>t;
        node* temp=new node;
        temp->data=t;
        temp->next=NULL;
        if(head==NULL){
            head=tail=temp;
        }
        else{
            tail->next=temp;
            tail=temp;
        }
    }
     void deletetail(){
        node* temp=head;
         while(temp->next!=NULL){
                temp=temp->next;
            if(temp->next=NULL){
                tail=temp;
                delete tail;
         }
     }
     }     
    void addbet(){
        int count=0;
         node* temp=head;
        int t;
        cout<<"enter index at which u want to add data(start at 0)";
        cin>>t;
        while(temp!=NULL){
            if(count==t-1){
                 node* temp1=new node;
                 int p;
                 cout<<"enter data u want to add";
                 cin>>p;
                 temp1->data=p;
                temp1->next=NULL;
                temp1->next=temp->next;
                temp->next=temp1;
             }
             count=count+1;
             temp=temp->next;
        }
        if(t>count){
            cout<<"no such index exit";
        }
    }
    node* search(){
        int count=0;
         node* temp=head;
        int t;
        cout<<"enter data u want to search";
        cin>>t;
        while(temp!=NULL){
            if(t==temp->data){
                return temp;
            }
         temp=temp->next;
        }
    }
    void display(){
        node* temp=head;
        while(temp!=NULL){
            cout<<temp->data;
            cout<<" ";
            temp=temp->next;
        }
    }
};
int main(){
    int choice;
    char ch='y';
    node* q;
    SLL ob;
     while(ch!='n'){
    cout<<"************************************ MENU **********************************"<<endl;
    cout<<"1.ADD TO HEAD"<<endl;
    cout<<"2.ADD TO TAIL"<<endl;
    cout<<"3.ADD IN BETWEEN"<<endl;
    cout<<"4.DELETE TO HEAD"<<endl;
    cout<<"5.DELETE TO TAIL"<<endl;
    cout<<"6.SEARCH"<<endl;
    cout<<"ENTER CHOICE";
    cin>>choice;
        switch(choice){
            case 1:
                     ob.addhead();
                     ob.display();
                     break;
            case 2:
                    ob.addtail();
                    ob.display();
                    break;
            case 3:
                    ob.addbet();
                    ob.display();
                    break;
            case 4:
                    ob.deletehead();
                    ob.display();
                    break;
            case 5:
                     ob.deletetail();
                     ob.display();
                     break;
            case 6:
                    q=ob.search();
                    cout<<"pointer of the searched data is :"<<q<<endl;
                    break;
            default :
                    cout<<"enter valid choice"<<endl;
                  }
                    cout<<"do u want continue";
                     cin>>ch;
     }
    return 0;
}
